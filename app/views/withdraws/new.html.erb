<!-- app/views/transactions/_form.html.erb -->
<%= form_with(model: @payment_transaction, local: true, url: withdraws_path) do |form| %>
  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: 'form-control', step: '0.01' %>
  </div>

  <div class="form-group">
    <%= link_to "Cancel", dashboard_path, class: "btn btn-primary" %>
    <%= form.submit 'Withdraw', class: 'btn btn-success' %>
  </div>
<% end %>
